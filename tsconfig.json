{
  "compilerOptions": {
    "noUnusedLocals": false,
    "forceConsistentCasingInFileNames": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "disableSourceOfProjectReferenceRedirect": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2020",
    "module": "Node16",
    "moduleResolution": "node16",
    "composite": true,
    "incremental": true,
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "pretty": true,
    "lib": [
      "ES2022"
    ]
  },
  "exclude": [
    "**/*.test.ts",
    "**/.dist"
  ]
}